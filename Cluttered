    writeini -n Points.ini $+(#,.,$nick) Points $calc($readini(Points.ini,$+(#,.,$nick),Points) $iif($1 == add,+,-) $iif($1 isnum,$1,1))

  splay -w D:/MyMusic/Sounds/ $+ $1 $+ .wav }

}

