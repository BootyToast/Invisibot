//PLAY


on *:TEXT:*!dur:#:{ 

  if ($readini(Points.ini,$+(#,.,$nick),Points) > 1) {

    .timerDurr 1 0.5 { /yfloodfill D:\Photos\bootytoast\Pictures\Stream\durr.jpg }

    .timerGame 1 0.6 { /sendkey +(`) }  

    .timerClose 1 1.5 { /close -@durr.jpg }

    .timerDurrs 1 0.5 { splay -w D:/MyMusic/Sounds/!durr3.wav }

    writeini -n Points.ini $+(#,.,$nick) Points $calc($readini(Points.ini,$+(#,.,$nick),Points) $iif($1 == add,+,-) $iif($1 isnum,$1,2))

  }
}


on *:TEXT:*!dumb:#:{ 

  if ($readini(Points.ini,$+(#,.,$nick),Points) > 3) {

    .timerKarate 1 0.5 { /yfloodfill D:\Photos\bootytoast\Pictures\Stream\karate.jpg }
    .timerKarate2 1 2.5 { /yfloodfill D:\Photos\bootytoast\Pictures\Stream\karate2.jpg }
    .timerKarate3 1 4.5 { /yfloodfill D:\Photos\bootytoast\Pictures\Stream\karate3.jpg }

    .timerClosekarate 1 1.5 { /close -@karate.jpg }
    .timerClosekarate2 1 3.5 { /close -@karate2.jpg }
    .timerClosekarate3 1 5.5 { /close -@karate3.jpg }

    .timerKaratesound 1 0.5 { splay -w D:/MyMusic/Sounds/karate.wav }
    .timerKaratesound2 1 2.5 { splay -w D:/MyMusic/Sounds/karate2.wav }
    .timerKaratesound3 1 4.5 { splay -w D:/MyMusic/Sounds/karate3.wav }

    .timerGamekarate 1 0.6 { /sendkey +(`) }
    .timerGamekarate2 1 2.6 { /sendkey +(`) }
    .timerGamekarate3 1 4.6 { /sendkey +(`) }



    writeini -n Points.ini $+(#,.,$nick) Points $calc($readini(Points.ini,$+(#,.,$nick),Points) $iif($1 == add,+,-) $iif($1 isnum,$1,4))

  }
}



