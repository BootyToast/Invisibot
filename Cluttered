//CRUMBS


on *:TEXT:!crumbs?:#: { 

  if ($nick isop #) { msg $chan Crumbs are the points system for this channel. Use crumbs to play interactive commands OR earn 50 for a spot on the whitelisted server. 20 mins = 1 crumb. }

}

on *:TEXT:*!crumbs:#:{

  msg # $nick has $readini(Points.ini,$+(#,.,$nick),Points) crumbs!

}

on $*:text:/!crumbs (add|remove)/Si:#:{

  if ($nick isop #) { if ($nick == BootyToast) { 
      writeini -n Points.ini $+(#,.,$3) Points $calc($readini(Points.ini,$+(#,.,$3),Points) $iif($2 == add,+,-) $iif($4 isnum,$4,1))
    msg $chan $3 now has $readini(Points.ini,$+(#,.,$3),Points) total crumbs.  }

  }
}



